#!/bin/bash

# todo: show tasks for today

count() {
  # Task due before tomorrow
  pending=$(task due.before:tomorrow status:pending count)

  # Tasks done today
  done=$(task end.after:today count)

  # Total tasks done+pending today
  total=$((pending+done))

  # Tasks currently working on (including waiting)
  started=$(task start.any: status:pending count)

  # Waiting tasks for today
  waiting=$(task due.before:tomorrow due.after:today status:waiting count)

  echo "%{F#0ff}ÔÅÜ Todos:%{F-} $done/$total | %{F#0ff} Started:%{F-} $started | %{F#0ff} Waiting:%{F-} $waiting"
}

show() {
  task due.before:tomorrow due.after:today all
}

cmd=$1
shift

case $cmd in 
   "")
     show
;;
   count)
     count
;;
   *)
     show
;;
esac

